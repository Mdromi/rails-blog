<div class="">
  <% if flash[:error] %>
    <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-md">
      <h2 class="text-lg font-semibold">Error:</h2>
      <p><%= flash[:error] %></p>
    </div>
  <% end %>
  <%= form_with model: @blog_post, html: { class: 'space-y-4' } do |form| %>
    <% if @blog_post.errors.any? %>
      <div class="mb-4 bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-2 rounded-md">
        <h2 class="text-lg font-semibold">Validation Errors:</h2>
        <ul>
          <% @blog_post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form.label :title, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :title, class: 'w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500' %>
    </div>
    <div>
      <%= form.label :body, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_area :body, class: 'w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500' %>
    </div>
    <div>
      <% if @blog_post.new_record? %>
        <%= form.submit "Create Blog Post", class: 'w-full bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue active:bg-blue-800' %>
      <% else %>
        <%= form.submit "Update Blog Post", class: 'w-full bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 focus:outline-none focus:shadow-outline-green active:bg-green-800' %>
      <% end %>
    </div>
  <% end %>
</div>
